{
    "build": {
        "dockerfile": "base.dockerfile",
        "args": {
            "REMOTE_USER": "${localEnv:USER}"
        }
    },
    "remoteUser": "${localEnv:USER}",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode-remote.remote-containers",
                "Meezilla.json",
                "ms-azuretools.vscode-docker",
                "ms-vscode.makefile-tools",
                "ms-python.python"
            ],
            "settings": {
                "editor.formatOnSave": true
            }
        }
    },
}